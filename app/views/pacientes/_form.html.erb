<%= form_with(model: paciente) do |form| %>
  <% if paciente.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(paciente.errors.count, "error") %> prohibited this paciente from being saved:</h2>

      <ul>
        <% paciente.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :nomeCompleto, style: "display: block" %>
    <%= form.text_field :nomeCompleto %>
  </div>

  <div>
    <%= form.label :dataDeNascimento, style: "display: block" %>
    <%= form.date_field :dataDeNascimento %>
  </div>

  <div>
    <%= form.label :cpf, style: "display: block" %>
    <%= form.text_field :cpf %>
  </div>

  <div>
    <%= form.label :email, style: "display: block" %>
    <%= form.text_field :email %>
  </div>

  <div>
    <%= form.fields_for :endereco do |endereco_form| %>
      CEP: <%= endereco_form.text_field :cep%>
      Logradouro: <%= endereco_form.text_field :logradouro %>
      Bairro: <%= endereco_form.text_field :bairro %>
      Cidade: <%= endereco_form.text_field :cidade %>
      Complemento: <%= endereco_form.text_field :complemento %>
      Delete: <% endereco_form.check_box :_destroy %>
      <% end %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
